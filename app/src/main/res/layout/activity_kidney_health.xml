<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:fillViewport="true"
    tools:context=".KidneyHealthActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize">


        <LinearLayout
            android:id="@id/allTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:paddingEnd="30dp">


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/bg_app_bar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_app_bar">

                    <ImageView
                        android:id="@+id/img_appBar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/login"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/learn_health_kidney"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:ignore="RelativeOverlap" />


                </RelativeLayout>


            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/bullet"
                        android:layout_toLeftOf="@id/bullet"
                        android:text="موقعیت کلیه ها :"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bullet"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/bullet_button"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <com.codesgood.views.JustifiedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="7dp"
                    android:text="@string/kidney_health_txt"
                    android:textColor="@color/light_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="UnusedAttribute" />


                <com.codesgood.views.JustifiedTextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:lineSpacingExtra="7dp"
                    android:fontFamily="@font/iranian_sans"
                    android:text=" برای مشاهده فیلم دیتا(اینترنت) خود را روشن کنید"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:alpha="0.5"
                        android:src="@drawable/vone"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/vone"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/purple_200"
                        android:src="@drawable/ic_baseline_play_arrow_24"
                        android:tint="@color/purple_200"
                        tools:ignore="ContentDescription,MissingClass,UnusedAttribute" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/allTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="end"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranian_sans"
                            android:text="وظیفه کلیه ها:"
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/bullet_button"
                            android:elevation="3dp"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/iranian_sans"
                        android:justificationMode="inter_word"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="7dp"
                        android:paddingStart="8dp"
                        android:paddingLeft="8dp"
                        android:text="کلیه‌ وظیفه تصفیه‌خون را بر عهده دارد. آنها مواد زائد را حذف می‌کنند، تعادل مایعات بدن را کنترل می‌کنند و سطوح الکترولیت‌های مناسب را حفظ می‌کنند. علاوه بر این، کلیه ها نقش مهمی در فرایند تولید ویتامین D، گلبول‌های قرمز خون و هورمون هایی که فشار خون را تنظیم می‌ کنند دارند."
                        android:textColor="@color/light_black"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText,RtlSymmetry,UnusedAttribute" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranian_sans"
                            android:text="اختلال در عملکرد کلیه ها:"
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/bullet_button"
                            android:elevation="3dp"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/iranian_sans"
                        android:justificationMode="inter_word"
                        android:layoutDirection="rtl"
                        android:lineSpacingExtra="7dp"
                        android:paddingStart="8dp"
                        android:paddingLeft="8dp"
                        android:text="اگر کلیه‌ به درستی کار نکند، مواد زائد در خون و مایعات بدن جمع شده و باعث آسیب رسیدن به سایر ارگانهای بدن می شود.از طرفی دیگر شرایط و بیماری‌ های مختلفی نیز می‌ تواند منجر به آسیب به کلیه‌ ها شوند. شایع‌ ترین علت بیماری‌ های کلیوی دیابت و فشار خون هستند."
                        android:textColor="@color/light_black"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText,RtlSymmetry,UnusedAttribute" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranian_sans"
                            android:text="علت درد در کلیه ها:"
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/bullet_button" />


                    </LinearLayout>




                    <com.codesgood.views.JustifiedTextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:lineSpacingExtra="7dp"
                        android:fontFamily="@font/iranian_sans"
                        android:text=" برای مشاهده فیلم دیتا(اینترنت) خود را روشن کنید"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:alpha="0.5"
                            android:src="@drawable/vtwo"
                            tools:ignore="ContentDescription" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/vtwo"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/purple_200"
                            android:src="@drawable/ic_baseline_play_arrow_24"
                            android:tint="@color/purple_200"
                            tools:ignore="ContentDescription,UnusedAttribute" />


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/allTxt">

            <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_baseline_home_24"
                android:tint="@color/black"
                tools:ignore="ContentDescription" />


            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_baseline_keyboard_return_24"
                android:tint="@color/black"
                tools:ignore="ContentDescription" />


        </RelativeLayout>


    </RelativeLayout>


</ScrollView>